---
import "@fontsource/inter/400.css";
import "@fontsource/inter/500.css";
import "@fontsource/inter/600.css";
import "@fontsource/inter/700.css";
import "@fontsource/inter/800.css";

import { Header } from "../components/Header";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="h-full scroll-smooth bg-gray-900 antialiased">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body class="flex min-h-full flex-col">
    <!-- Top separator -->
    <div class="h-2 w-full bg-teal-600"></div>

    <!-- Background grid -->
    <div class="pointer-events-none absolute inset-0 flex justify-center">
      <div
        class="hidden h-full w-full max-w-7xl grid-cols-4 gap-3.5 px-4 lg:grid"
      >
        <div class="border-x border-white/5"></div>
        <div class="border-x border-white/5"></div>
        <div class="border-x border-white/5"></div>
        <div class="border-x border-white/5"></div>
      </div>
    </div>
    <!-- <Header client:load /> -->
    <main class="relative flex grow flex-col">
      <slot />
    </main>
  </body>
</html>
